{
    "name": "additionapps/flexible-presenter",
    "description": "Easily define just the right data for your InertiaJS views",
    "license": "MIT",
    "authors": [
        {
            "name": "Addition",
            "email": "info@addition.com.au"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/pagination": "^9.0|^8.0",
        "illuminate/support": "^9.0|^8.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.12",
        "laravel/legacy-factories": "^1.0",
        "orchestra/testbench": "^6.0|^7.0",
        "phpunit/phpunit": "~9.0"
    },
    "autoload": {
        "psr-4": {
            "AdditionApps\\FlexiblePresenter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdditionApps\\FlexiblePresenter\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "AdditionApps\\FlexiblePresenter\\FlexiblePresenterServiceProvider"
            ]
        }
    }
}
